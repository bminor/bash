. test-aux-functions

recho $( echo a$'\01)'b )
recho $( echo ab )
recho $( echo \ )
recho $( echo \\ )

LC_CTYPE=C
od -c <<EOF | _intl_normalize_spaces
a$'\01'b
ab
EOF

od -c <<EOF | _intl_normalize_spaces
${none-a$'\01'b}
${none-ab}
EOF

V=Aa$'\01'b
od -c <<EOF | _intl_normalize_spaces
${V%a$'\01'b}
${V%ab}
EOF
