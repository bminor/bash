# repeat - repeat a command
# 
# usage: repeat N command [arg...]
#
# Evaluate COMMAND ARGs N times

repeat()
{
	local _i _count

	(( $# < 2 )) && {
		echo 'repeat: usage: repeat N command [arg...]' >&2
		return 2
	}

	_count=$1
	(( $_count < 1 )) && {
		echo "repeat: count must be >= 1" >&2
		return 2
	}
	shift

	for ((_i = 1; _i <= $_count; _i++)); do
		eval "$@"
	done
}
